<?xml version="1.0" encoding="UTF-8"?>
<config
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xmlns='http://www.ehcache.org/v3'
    xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <cache alias="selectArticleRecordCache">
        <key-type>java.lang.Long</key-type>
        <value-type>com.few.api.repo.dao.article.record.SelectArticleRecord</value-type>

        <resources>
            <heap unit="entries">50</heap>
        </resources>

        <listeners>
            <listener>
                <class>com.few.api.repo.common.LocalCacheEventLogger</class>
                <events>
                    <event>CREATED</event>
                    <event>EXPIRED</event>
                    <event>REMOVED</event>
                    <event>UPDATED</event>
                </events>
            </listener>
        </listeners>
    </cache>

</config>
